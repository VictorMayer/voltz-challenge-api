{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
        "error",
        {
            "js": "ignorePackages"
        }
        ],
        "indent": ["error", 4],
        "object-curly-newline": ["error", {
            "ObjectExpression": { "consistent": true },
            "ObjectPattern": { "multiline": true, "minProperties": 0 },
            "ImportDeclaration": "never",
            "ExportDeclaration": "always"
        }],
        "import/no-useless-path-segments": 0,
        "max-len": "off"
    }
}